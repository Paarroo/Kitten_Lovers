<h1>Mon Panier</h1>

<% if @cart.cart_items.any? %>
  <ul>
    <% @cart.cart_items.each do |cart_item| %>
      <li>
        <p><strong><%= cart_item.item.name %></strong></p>
        <p>Prix : <%= number_to_currency(cart_item.item.price, unit: "€") %></p>
        <%= button_to "Supprimer", cart_item_path(cart_item), method: :delete, data: { confirm: "Retirer cet article ?" } %>
      </li>
      <hr>
    <% end %>
  </ul>

  <p><strong>Total :</strong> <%= number_to_currency(@cart.total_price, unit: "€") %></p>

  <%= button_to "Procéder au paiement sécurisé", new_order_path, method: :get %>

<% else %>
  <p>Ton panier est vide.</p>
<% end %>
