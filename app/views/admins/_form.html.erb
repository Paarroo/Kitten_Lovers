<%= form_with(model: admin, class: "contents") do |form| %>
  <% if admin.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul class="list-disc ml-6">
        <% admin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:email].none?, "border-red-400 focus:outline-red-600": admin.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:first_name].none?, "border-red-400 focus:outline-red-600": admin.errors[:first_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:last_name].none?, "border-red-400 focus:outline-red-600": admin.errors[:last_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :role %>
    <%= form.text_field :role, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:role].none?, "border-red-400 focus:outline-red-600": admin.errors[:role].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:phone].none?, "border-red-400 focus:outline-red-600": admin.errors[:phone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :department %>
    <%= form.text_field :department, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:department].none?, "border-red-400 focus:outline-red-600": admin.errors[:department].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :active %>
    <%= form.checkbox :active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": admin.errors[:active].none?, "border-red-400 focus:outline-red-600": admin.errors[:active].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :last_login %>
    <%= form.datetime_field :last_login, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:last_login].none?, "border-red-400 focus:outline-red-600": admin.errors[:last_login].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :permissions %>
    <%= form.textarea :permissions, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:permissions].none?, "border-red-400 focus:outline-red-600": admin.errors[:permissions].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :created_by %>
    <%= form.text_field :created_by, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:created_by].none?, "border-red-400 focus:outline-red-600": admin.errors[:created_by].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :updated_by %>
    <%= form.text_field :updated_by, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": admin.errors[:updated_by].none?, "border-red-400 focus:outline-red-600": admin.errors[:updated_by].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
