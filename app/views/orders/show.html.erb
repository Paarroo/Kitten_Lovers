<div class="page-wrapper d-flex flex-column min-vh-100">
  <div class="d-flex justify-content-center align-items-center flex-grow-1 py-5">
    <div class="beige-section p-5 rounded-4 shadow" style="background-color: #fdf7f0; max-width: 900px; width: 100%;">
      <h1 class="text-center mb-4 fw-bold">Merci pour votre achat 🐾</h1>

      <% @order.order_items.each do |order_item| %>
        <% item = order_item.item %>
        <div class="card mb-4 shadow-sm border rounded p-3">
          <div class="text-center">
            <% if item.image_url.present? %>
              <%= image_tag item.image_url, alt: item.title, class: "img-fluid rounded mb-3" %>
            <% end %>

            <h5 class="fw-bold mb-2"><%= item.title %></h5>
            <p class="mb-3"><%= item.description %></p>

            <% if item.image_url.present? %>
              <%= link_to "Télécharger l'image", item.image_url, class: "btn btn-secondary me-2", download: true, target: "_blank" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="text-center">
        <%= link_to "← Retour à mes commandes", orders_path, class: "btn btn-primary mt-3 w-100" %>
      </div>
    </div>
  </div>
</div>
