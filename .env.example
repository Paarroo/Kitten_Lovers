# Copy this file to .env and fill in your actual values

# EMAIL CONFIGURATION
# Gmail SMTP for development (used in config/environments/development.rb)
GMAIL_USERNAME=your_gmail_email@gmail.com
GMAIL_PASSWORD=your_gmail_app_specific_password

# Custom mailer addresses (used in app/mailers/user_mailer.rb)
DEVISE_MAILER_FROM=auth@yourapp.com
MAILER_REPLY_TO=support@yourapp.com
SUPPORT_EMAIL=support@yourapp.com

# STRIPE PAYMENT CONFIGURATION
# Get these keys from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# RAILS SECURITY
# Generate a new secret key with: rails secret
SECRET_KEY_BASE=your_generated_secret_key_base_here

# SERVER CONFIGURATION
# Rails environment settings
RAILS_ENV=development
PORT=3000

# PRODUCTION-ONLY VARIABLES (uncomment when deploying)
# DATABASE_URL=postgresql://user:password@host:5432/kitten_lovers_production
# RAILS_SERVE_STATIC_FILES=true
# WEB_CONCURRENCY=2
# RAILS_MAX_THREADS=5
